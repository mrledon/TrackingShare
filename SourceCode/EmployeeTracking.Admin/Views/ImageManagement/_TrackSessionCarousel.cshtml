@using EmployeeTracking.Data.ModelCustom
@model List<TrackDetailViewModel>
@{
    var idx = 0;
}
@if (Model.Count > 0)
{
    <div id='carousel-custom' class='carousel slide' data-ride='carousel'>
        <div class='carousel-outer'>
            <!-- Wrapper for slides -->
            <div class='carousel-inner'>
                @foreach (var item in Model)
                {
                    foreach (var image in item.TrackDetailImages.OrderBy(x => x.CreateDate).ToList())
                    {
                        var url = image.Url + image.FileName;

                        <div class='item @(idx == 0 ? "active" : "")'>
                            <img src='@url'/>
                        </div>
                        idx++;
                    }
                }
            </div>

            <!-- Controls -->
            <a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
                <span class='glyphicon glyphicon-chevron-left'></span>
            </a>
            <a class='right carousel-control' href='#carousel-custom' data-slide='next'>
                <span class='glyphicon glyphicon-chevron-right'></span>
            </a>
        </div>

        <!-- Indicators -->
        <ol class='carousel-indicators mCustomScrollbar'>
            @{ idx = 0;}
            @foreach (var item in Model)
            {
                foreach (var image in item.TrackDetailImages.OrderBy(x => x.CreateDate).ToList())
                {
                    var url = image.Url + image.FileName;

                    <li data-target='#carousel-custom' data-slide-to='@idx' class='@(idx == 0 ? "active" : "")'><img src='@url' /></li>
                    idx++;
                }
            }
        </ol>
    </div>

}
else
{
    <h4>Không có hình ảnh.</h4>
}

<div id="myModal" class="modal fade" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                    <img src="" class="enlargeImageModalSource" style="width: 100%;">
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>
<script>

    $(document).ready(function () {
        $('.carousel-outer img').dblclick(function () {
            window.open($(this).attr('src'), '_blank');
        });
    });
</script>