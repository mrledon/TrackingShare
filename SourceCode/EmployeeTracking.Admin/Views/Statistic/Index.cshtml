            var wardId = $(".wardVietNam option:selected").val();
            listStoreAByProvince(provinceId, districtId, wardId);
        });
    });

    function setWardCombobox(districtId) {
        var provinceId = $("#provinceVietNam option:selected").val();
        if (districtId === "0") {
                $(".wardVietNam").hide();
            } else {
                $(".wardVietNam").show();

