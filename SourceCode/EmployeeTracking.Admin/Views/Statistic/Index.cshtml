                                    s += ', ';
                                }
                                s += item.DistrictName;
                            }
                            if (item.ProvinceName.length > 0) {
                                if (s.length > 0) {
                                    s += ', ';
                                }
                                s += item.ProvinceName;
                            }

                            $('#lstStore').append('<tr><td><span>' + s + '</span></td></tr>');
                            
                        });
                    }
				});
    }

