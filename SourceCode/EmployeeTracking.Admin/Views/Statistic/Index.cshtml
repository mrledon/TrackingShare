				$.ajax({
                    url: '@Url.Action("GetWardSelect", "Location")',
                    type: "GET",
                    async: false,
                    data: { 'districtId': districtId},
                    success: function (data) {
                        var wardId = 0;
                        if (data.length > 0) {
                            wardId = data[0].Id;
                        }
						//Step 7: Load dữ liệu của phường/xã theo {tỉnh/thành phố + quận/huyện} ở trên
